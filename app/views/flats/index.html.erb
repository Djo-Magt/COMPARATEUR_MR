
<div class="row" data-controller="controller-test">
  <% @flats.each do |flat| %>
    <%= link_to flat_path(flat) do %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <div class="card-category" data-aos="zoom-in">
          <% flat.images.each do |image| %>
            <%= image %>
          <% end %>

        </div>
        <%= flat.name %>
      </div>
    <% end %>
  <% end %>
  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
